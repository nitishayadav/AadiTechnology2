
@model IEnumerable<LoginTask.Models.SubTopicModel>
@{
    ViewBag.Title = "SubTopicList";
}

<h2>SubTopicList</h2>

<table class="table">
    <tr>

        <th> @Html.DisplayNameFor(model => model.Topic.TopicName)</th>
        <th> @Html.DisplayNameFor(model => model.SubTopicName)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td> @Html.DisplayFor(modelItem => item.Topic.TopicName)</td>
            <td> @Html.DisplayFor(modelItem => item.SubTopicName)</td>

            <td>
                @Html.ActionLink("Edit", "EditSubTopic", "Home", new { SubtopicId = item.Id }, null) |
                @Html.ActionLink("Delete", "DeleteSubTopic", new { SubtopicId = item.Id })
            </td>
        </tr>
    }

</table>