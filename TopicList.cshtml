@model IEnumerable<LoginTask.Models.TopicModel>
@{
    ViewBag.Title = "TopicDetails";
}

<h2>TopicDetails</h2>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/table2excel.js"></script>


<script>
        $(function () {
            $("#btnExport").click(function () {
                alert("button clicked")
               $("#tblCustomers").table2excel({
                    filename: "Table.xls"
                });
            });
        //});
</script>
<input type="submit" id="btnExport" value="Export" />
<table class="table" id="tblCustomers">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </th>
        <th> @Html.DisplayNameFor(model => model.TopicName)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.CourseName)
            </td>
            <td> @Html.DisplayFor(modelItem => item.TopicName)</td>
            <td>
                @Html.ActionLink("Edit", "EditTopic", "Home", new { topicId = item.TopicId }, null) |
                @Html.ActionLink("Delete", "DeleteTopic", new { id = item.TopicId })
            </td>
        </tr>
    }

</table>
